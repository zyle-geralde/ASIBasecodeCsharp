@model IEnumerable<ASI.Basecode.Data.Models.Review>

@{
    ViewData["Title"] = "Book Reviews";
}

<h2>Book Reviews</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Add New Review</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Review ID</th>
            <th>Book ID</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Likes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.ReviewId</td>
                <td>@review.BookId</td>
                <td>@review.Rating</td>
                <td>@review.Comment</td>
                <td>@review.Likes</td>
            </tr>
        }
    </tbody>
</table>
