@model ASI.Basecode.Services.ServiceModels.ReviewViewModel

@{
    ViewData["Title"] = "Add Review";
}

<h2>Add New Review</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="BookId" class="control-label">Book Name</label>
        <input asp-for="BookId" class="form-control"></input>
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="control-label">Rating</label>
        <input asp-for="Rating" type="number" step="0.1" min="0" max="5" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label">Comment</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserId" class="control-label">User ID</label>
        <input asp-for="UserId" class="form-control" readonly value="@User.Identity.Name" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
