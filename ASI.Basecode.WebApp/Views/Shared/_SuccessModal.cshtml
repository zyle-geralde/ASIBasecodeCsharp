@model ASI.Basecode.WebApp.Models.SuccessModalModel

@section styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/admin/common.css" asp-append-version="true" />
}

<div class="modal fade success-modal" id="@Model.Id" tabindex="-1" aria-labelledby="@(Model.Id)Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center py-4">
                <div class="success-icon mb-3">
                    <i class="fas fa-check"></i>
                </div>
                <h5 class="modal-title mb-2" id="@(Model.Id)Title">@Model.Title</h5>
                <p class="mb-4" id="@(Model.Id)Message">@Model.Message</p>
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal" id="@(Model.Id)OkBtn">@Model.OkButtonText</button>
            </div>
        </div>
    </div>
</div>