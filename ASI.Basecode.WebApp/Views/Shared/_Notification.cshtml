<link rel="stylesheet" href="~/css/toastr-custom.css" asp-append-version="true" />

@if (TempData["message"] != null)
{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script type="text/javascript">
        // Configure toastr
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "3000",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        // Display the toastr after DOM is fully loaded
        $(document).ready(function() {
            toastr.success('@TempData["message"]');
            // Clear the message after displaying it
            @TempData.Remove("message");
        });
    </script>
}

@if (TempData["message"] != null)
{
    <script>
        $(document).ready(function() {
            toastr.success('@TempData["message"]');
            // Clear the message after displaying it
            @TempData.Remove("message");
        });
    </script>
}

@if (TempData["error"] != null)
{
    var errorMessage = TempData["error"].ToString();
    TempData.Remove("error");
    
    <script>
        $(document).ready(function() {
            toastr.error('@Html.Raw(Json.Serialize(errorMessage))');
        });
    </script>
}

@if (TempData["SuccessMessage"] != null)
{
    var successMessage = TempData["SuccessMessage"].ToString();
    TempData.Remove("SuccessMessage");
    
    <script>
        $(document).ready(function() {
            toastr.success('@Html.Raw(Json.Serialize(successMessage))');
        });
    </script>
}