@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@section styles
{
    <style>
        .dp {
            position: center;
            position: relative;
            height: 40px;
            width: 40px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block;
            object-fit: fill;
            overflow: hidden;
            display: inline-block;
            background: #fff;
            background-color: #fff;
        }
    </style>
}


<header class="@((ViewBag.LoginView == true) ? "hide-navbar" : "")">
    <div class="logosec">
        <img src="~/img/bb_logo_black.png" alt="Book Icon" class="book-icon hover-pointer"
             onclick="window.location.href = '@Url.Action("Index", "Home")';" />
    </div>

    <div class="logosec">
        <div class="mr-20 hover-pointer profile-dropdown-trigger">

            <div class="dp">
                @{
                    var profilePicture = HttpContextAccessor.HttpContext.Session.GetString("ProfilePicture");
                    if (string.IsNullOrEmpty(profilePicture))
                    {
                        profilePicture = "/img/null_profilepicture.png";
                    }
                }
                <img src="@profilePicture"
                     alt="dp"
                style="width: 40px; height:40px;">
            </div>
            <span class="username-display">@HttpContextAccessor.HttpContext.Session.GetString("UserName")</span>


            <div class="dropdown">
                <ul>
                    <li>
                        <i class="fa-solid fa-user"></i> <a href="/PersonProfile/Index">Profile</a>
                    </li>
                    <li>
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <a asp-action="SignOutUser" asp-controller="Account">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>


