            }

            console.log("Submitting review update:", {
                reviewId: reviewId,
                bookId: bookId,
                rating: rating,
                comment: comment,
                uploadDate: uploadDate
            });

            // Only validate comment - the rating should already be valid
            if (!comment) {
                toastr.warning("Please provide a comment about the book.");
                return;
            }

            // Get the token
            const token = $('#editReviewForm input[name="__RequestVerificationToken"]').val();

            // Create a complete form data object with all necessary fields
            const formData = {
                ReviewId: reviewId,
                BookId: bookId, 
                Rating: rating,
                Comment: comment,
                UserId: $('#edit-userId').val(),
                UploadDate: uploadDate,
                __RequestVerificationToken: token
            };

            // Submit the form via AJAX
            $.ajax({
                url: '@Url.Action("Edit", "Review")',
                type: 'POST',
                data: formData,
                headers: {
                    'RequestVerificationToken': token
