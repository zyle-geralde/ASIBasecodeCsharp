@model IEnumerable<ASI.Basecode.Data.Models.User>

@{
    ViewData["Title"] = "Users";
}

<h2>All Users</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role</th>
            <th style="width:160px">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.Id</td>
            <td>@u.UserId</td>
            @* <td>@u.Email</td>
            <td>@u.FirstName</td>
            <td>@u.LastName</td>
            <td>@u.Role</td> *@
            <td>
                <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-primary">
                    Edit
                </a>
                <form asp-action="Delete" asp-route-id="@u.Id" method="post" class="d-inline"
                      onsubmit="return confirm('Are you sure?');">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
