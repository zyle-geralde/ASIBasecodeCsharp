            font-weight: 700;
            text-align: center;
            margin-bottom: 32px;
            line-height: 1.2;
        }

        .title-highlight { 
            color: #5b7c78;
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            font-size: 24px;
        }

        .form-group {
            width: 100%;
            margin-top: 12px;
            display: flex;
            flex-direction: column;
            margin-bottom: 3px;
        }

        .form-label { 
            font-family: 'Montserrat', sans-serif;
            font-weight: 500;
            color: #3a4a47;
            margin-bottom: 4px;
            display: block;
            font-size: 14px;
        }

        .form-control-custom { 
            width: 100%;
            padding: 12px 16px;
            border: 1px solid #bfc8c6;
            border-radius: 6px;
            font-size: 12px;
            font-family: 'Montserrat', sans-serif;
            background: #fafafa;
            color: #222;
            margin-bottom: 2px;
            min-width: 0;
            box-sizing: border-box;
        }

        .form-control-custom::placeholder {
            color: #98958E;
            font-weight: 300;
        }

        .input-group-with-icon {
            position: relative;
        }
        .input-group-with-icon .toggle-password {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #9ca3af;
            font-size: 1rem;
            z-index: 10;
        }

        input[type="password"]::-ms-reveal,
        input[type="password"]::-ms-clear {
            display: none;
        }
        input[type="password"]::-webkit-contacts-auto-fill-button {
            visibility: hidden;
            pointer-events: none;
            position: absolute;
            right: 0;
        }

        .error-message {
            font-size: 0.875rem;
            color: #ef4444;
            margin-top: 0.25rem;
        }

        .forgot-password-link {
            text-align: right;
            margin-top: -1rem;
            margin-bottom: 1rem; 
        }
        .forgot-password-link a {
            color: #5b7c78;
            font-family: 'Montserrat', sans-serif; 
            font-size: 0.9rem; 
            text-decoration: underline;
            transition: color 0.2s;
        }
