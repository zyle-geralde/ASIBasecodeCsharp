@section styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/adduser.css" />
}

<div class="add-user-container">
    <div class="content-wrapper">
        <div class="header-section">
            <h1>Add New User</h1>
            <p>Enter details of the new user here.</p>
        </div>

        <form class="add-user-form">
            <div class="form-row">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" id="firstName" name="firstName" placeholder="Juan">
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" id="lastName" name="lastName" placeholder="Cruz">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" placeholder="Juanito">
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" placeholder="juancruz@gmail.com">
                </div>
            </div>

            <div class="upload-section">
                <label>Upload profile photo</label>
                <div class="upload-input">
                    <input type="file" id="profilePhoto" name="profilePhoto" hidden>
                    <div class="file-display">No file chosen</div>
                    <button type="button" class="browse-btn" onclick="document.getElementById('profilePhoto').click()">BROWSE</button>
                </div>
                <div class="file-info">
                    <small>Max file size: 10MB</small>
                    <small>Supported formats: JPG, PNG, JPEG</small>
                </div>
            </div>

            <div class="button-group mb-0">
                <button type="button" class="cancel-btn">CANCEL</button>
                <button type="submit" class="submit-btn">ADD USER</button>
            </div>
        </form>
    </div>
</div>